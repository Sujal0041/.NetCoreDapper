@{
    // Check if the JWT token exists in cookies to determine if the user is logged in
    var isLoggedIn = Context.Request.Cookies["jwtToken"] != null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dap.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <!-- Show DB link if the user is authenticated -->
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Form">Form</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link" href="/DB">DB</a>
                            </li>

                        }

                        <!-- Show Login and Sign Up links if the user is not authenticated -->
                        @if (!isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Signup">Sign Up</a>
                            </li>
                        }

                        <!-- Show Logout button if the user is authenticated -->
                         @if (isLoggedIn) 
                         { 
                            <li class="nav-item"> 
                                 <form method="post" asp-page-handler="Logout" class="form-inline"> 
                                     <button type="submit" class="btn btn-danger">Log Out</button> 
                                 </form> 
                             </li> 
                         } 
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
