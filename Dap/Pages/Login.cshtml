@page
@model Dap.Pages.LoginModel
@{
}
<section class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-lg rounded-4">
                    <div class="row g-0 align-items-center">

                        <div class="col-md-6 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                                 class="img-fluid rounded-start" alt="Login illustration" />
                        </div>
                        <div class="col-md-6 p-4">
                            <h3 class="mb-4 fw-bold text-center">Login to Your Account</h3>
                            <form>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form1Example13">Email address</label>
                                    <input type="email" id="form1Example13" class="form-control form-control-lg" />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form1Example23">Password</label>
                                    <input type="password" id="form1Example23" class="form-control form-control-lg" />
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                                        <label class="form-check-label" for="form1Example3"> Remember me </label>
                                    </div>
                                    <a href="#!" class="text-decoration-none">Forgot password?</a>
                                </div
                                <div class="d-grid mb-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> 
            </div>
        </div>
    </div>
</section>
